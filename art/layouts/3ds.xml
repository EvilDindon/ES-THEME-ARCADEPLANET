    <image name="md_thumbnail">
      <maxSize>0.130208 0.23148148</maxSize>
	</image>
  
  </customView>
 
  <customView name="MiniLogos+Details">
      
    <image name="md_thumbnail">
      <size>0.19 0</size>
	</image>
   
  </customView>
  
  <customView name="CoverFlow">
  
    <imagegrid name="gamegrid">
	  <padding>0.029 0.06 0.029 0.04</padding>
