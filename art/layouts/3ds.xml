<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
    
  <view name="detailed">
  
    <image name="md_thumbnail">
      <maxSize>0.19 0.3377</maxSize>
	</image>
	
  </view>
  
   <customView name="BoxCarousel">
  
	<imagegrid name="gamegrid">
	  <autoLayout>5 1</autoLayout>
	</imagegrid>  
   	
  </customView>
  
  <customView name="MiniLogos">
  
    <image name="md_thumbnail">
      <maxSize>0.16210935 0.28819425</maxSize>
	</image>
  
  </customView>
 
