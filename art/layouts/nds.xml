<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  
   <customView name="BoxCarousel">
  
	<imagegrid name="gamegrid">
	  <autoLayout>5 1</autoLayout>
	</imagegrid>  
   	
  </customView>  
  
  <customView name="MiniLogos">
  	
    <image name="md_thumbnail">
      <maxSize>0.162 0.28819</maxSize>
	</image>	
   	
  </customView> 
  
  <customView name="MiniLogosRight">
  	
    <image name="md_thumbnail">
      <maxSize>0.130208 0.23148148</maxSize>
	</image>
  
  </customView>
  
  <customView name="MiniLogos+Details,detailed">
      
    <image name="md_thumbnail">
      <size>0.19 0</size>
	</image>
   
  </customView>
  
  <customView name="CoverFlow">
  
    <imagegrid name="gamegrid">
	  <padding>0.029 0 0.029 0</padding>
      <pos>0 0.14</pos>
      <autoLayout>5 1</autoLayout>
	  <autoLayoutSelectedZoom>1.26</autoLayoutSelectedZoom>
      <margin>0.026 0.026</margin>
    </imagegrid>
   
  </customView>
  
  <customView name="VerticalLogos">
  
    <image name="Controller" extra="true">
	  <x>0.444</x>	  
    </image>
	
	<image name="Controller2" extra="true">
	  <x>0.444</x>
    </image>
	
	<image name="md_thumbnail">
      <size>0.19 0</size>
	</image>
	 
 </customView>
 
 <customView name="LongList+Preview">
  
    <image name="Controller1" extra="true">
	  <x>0.32083333</x>	  
    </image>
	
	<image name="Controller2" extra="true">
	  <x>0.32083333</x>
    </image>
		 
 </customView>
 
 <customView name="RetroTiles">
	
   	<imagegrid name="gamegrid">
      <pos>0 0.018</pos>
      <autoLayout>4 3</autoLayout>
    </imagegrid>
	
	<image name="md_thumbnail">
      <size>0.195 0</size>
	</image>
	    	
  </customView>
 
</theme>
