    </imagegrid>
   
  </customView>
  
  <customView name="LogoFlow">
  
    <imagegrid name="gamegrid">
	  <pos>0 0.36</pos>
      <autoLayout>5 1</autoLayout>
   </imagegrid>
   
  </customView>
  
  <customView name="LogosOnTop">
	
   	<imagegrid name="gamegrid">
	  <pos>0 -0.042</pos>
      <autoLayout>5 1</autoLayout>
    </imagegrid>
	    	
  </customView>
  
  <customView name="VerticalLogos">
  
