	  <storyboard>
				<animation property="x" from="-0.2" to="0.444" begin="1100" duration="300" mode="Linear"/>
      </storyboard>	  
    </image>
	
	<image name="Controller2" extra="true">
	  <storyboard>
				<animation property="x" from="1.2" to="0.444" begin="1100" duration="300" mode="Linear"/>
      </storyboard>
     </image>
	 
	 <image name="md_thumbnail">
      <size>0.19 0</size>
	 </image>
	 
	 <imagegrid name="gamegrid">
     <pos>0.744 0.003</pos>
