    <image name="md_thumbnail">
      <size>0.19 0</size>
	</image>
	
  </view>
  
  <customView name="MiniLogos+Details">
 	
	<imagegrid name="gamegrid">
      <pos>0 0.43</pos>
      <autoLayout>7 4</autoLayout>
   </imagegrid>
   
    <image name="md_thumbnail">
      <size>0.19 0</size>
	</image>
   
  </customView>
  
  <customView name="SmallBoxes+Details">
  
