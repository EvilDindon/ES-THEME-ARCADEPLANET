<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  
  	<include>./theme.xml</include>
	
	<view name="splash">

		<splash name="splash">
			<backgroundColor>000000FF</backgroundColor>
		</splash>
		
		<image name="background">
			<path>./_art/backgrounds/169/splash.jpg</path>
		</image>
		
		<text name="label, Version, Platforms, Loading, Warning, author" extra="true">
			<origin>0.5 0.5</origin>
			<fontPath>./_art/fonts/ARCADE.TTF</fontPath>
			<fontSize>0.02</fontSize>
			<color>d2bfa8FF</color>
			<forceUppercase>true</forceUppercase>
			<size>1 0.1</size>
			<alignment>center</alignment>
			<glowColor>00000080</glowColor>
			<glowSize>2</glowSize>
			<glowOffset>1</glowOffset>
		</text>

		<text name="label">
			<size>0.33 0.05</size>
			<pos>0.5 0.75</pos>
			<color>DDDDDDff</color>
		</text>
				
		<text name="Version" extra="true">
			<pos>0.5 0.438</pos>
			<fontSize>0.016</fontSize>
			<color>A0A0A0</color>
			<text>Arcade Planet V0.99.2</text>			
		</text>
		
