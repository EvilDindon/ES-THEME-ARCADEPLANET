<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  
	<view name="splash">

		<splash name="splash">
			<backgroundColor>000000FF</backgroundColor>
		</splash>
		
		<image name="background">
			<path>./art/splash.jpg</path>
			<opacity>0</opacity>
			<storyboard>
				<animation property="opacity" from="0" to="1" begin="0" duration="6000" mode="Linear"/>
			</storyboard>
		</image>
		
		<text name="label, Version, Warning, author" extra="true">
			<origin>0 0</origin>
			<rotation></rotation>
			<fontPath>./art/arcade.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<color>669e02FF</color>
			<forceUppercase>true</forceUppercase>
			<size>0.5 0.1</size>
			<alignment>left</alignment>
			<glowColor>00000080</glowColor>
			<glowSize>2</glowSize>
			<glowOffset>1</glowOffset>
		</text>

		<text name="label">
			<size>0.33 0.05</size>
			<pos>0.2 0.85</pos>
			<color>DDDDDDff</color>
			<alignment>center</alignment>
		</text>
				
		<text name="Version" extra="true">
			<pos>0.367 0.164</pos>
			<text>Arcade Planet V0.95</text>			
		</text>
		
		<text name="Warning" extra="true">
			<pos>0.24 0.330</pos>
			<fontSize>0.018</fontSize>
			<color>A0A0A0FF</color>
			<text>PLEASE REFER TO THE README IF THE THEME LOOK WEIRD</text>			
		</text>
						
		<text name="author" extra="true">
			<pos>0.6 0.75</pos>
			<color>DDCC00ff</color>
			<text>By EvilDindon, 2021</text>
		</text>
			
		<image name="progressbar">
			<origin>0 0</origin>
			<pos>0.263 0.9</pos>
			<size>0.455 0.035</size>
			<color>a4a4a4</color>
			<colorEnd>FFFFFFFF</colorEnd>
		</image>
		
		<image name="progressbar:active">
			<color>a4a4a4</color>
			<colorEnd>FFFFFF</colorEnd>
		</image>
		
	</view>
	
</theme>
